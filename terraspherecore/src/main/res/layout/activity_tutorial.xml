<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TutorialActivity">
    <com.gecko.terraspherecore.widget.BlockedViewPager
        android:id="@+id/viewPager"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintDimensionRatio="16:13"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/wrapper1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <ImageView
                app:layout_constraintEnd_toEndOf="@id/wrapper1"
                app:layout_constraintStart_toStartOf="@id/wrapper1"
                app:layout_constraintBottom_toBottomOf="@id/wrapper1"
                app:layout_constraintTop_toTopOf="@id/wrapper1"
                android:background="@drawable/ic_tutorial_1"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_width="0dp"
                android:layout_height="0dp" />
            <LinearLayout
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wrapper1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="16dp"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:text="@string/tutorial_1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:text="@string/tutorial_1_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintDimensionRatio="16:13"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/wrapper2"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <ImageView
                app:layout_constraintEnd_toEndOf="@id/wrapper2"
                app:layout_constraintStart_toStartOf="@id/wrapper2"
                app:layout_constraintBottom_toBottomOf="@id/wrapper2"
                app:layout_constraintTop_toTopOf="@id/wrapper2"
                android:background="@drawable/ic_tutorial_2"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_width="0dp"
                android:layout_height="0dp" />
            <LinearLayout
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wrapper2"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="16dp"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:text="@string/tutorial_2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:text="@string/tutorial_2_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintDimensionRatio="16:13"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/wrapper3"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <ImageView
                app:layout_constraintEnd_toEndOf="@id/wrapper3"
                app:layout_constraintStart_toStartOf="@id/wrapper3"
                app:layout_constraintBottom_toBottomOf="@id/wrapper3"
                app:layout_constraintTop_toTopOf="@id/wrapper3"
                android:background="@drawable/ic_tutorial_3"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_width="0dp"
                android:layout_height="0dp" />
            <LinearLayout
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wrapper3"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="16dp"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:text="@string/tutorial_3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:text="@string/tutorial_3_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.gecko.terraspherecore.widget.BlockedViewPager>
    <Button
        app:layout_constraintWidth_percent="0.5"
        android:textAllCaps="false"
        android:id="@+id/next_button"
        android:text="@string/next"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pageIndicatorView"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <Button
        android:visibility="gone"
        app:layout_constraintWidth_percent="0.5"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textAllCaps="false"
        android:id="@+id/confirm_button"
        android:text="@string/start_using"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pageIndicatorView"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <com.rd.PageIndicatorView
        app:piv_radius="4dp"
        android:layout_marginBottom="24dp"
        android:id="@+id/pageIndicatorView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:piv_animationType="color"
        app:piv_dynamicCount="true"
        app:piv_interactiveAnimation="true"
        app:piv_selectedColor="@android:color/black"
        app:piv_unselectedColor="@android:color/darker_gray"
        app:piv_viewPager="@id/viewPager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/skip_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@android:color/darker_gray"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="@string/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>